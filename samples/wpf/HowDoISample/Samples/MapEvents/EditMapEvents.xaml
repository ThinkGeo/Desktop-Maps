<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.EditMapEvents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded"/>
        <Grid Grid.Column="1" Grid.Row="0">
            <Label Grid.Column="1" Grid.Row="0" Content="Interactive Controls:" FontWeight="Bold" FontSize="16"/>
            <RadioButton Grid.Column="1" Grid.Row="1" x:Name="DrawPolygon" Content="Draw Polygon" Click="DrawPolygon_Click" FontSize="14" FontWeight="Bold" IsChecked="True"></RadioButton>
            <RadioButton Grid.Column="1" Grid.Row="2" x:Name="EditShape" Content="Edit Shape" Click="EditShape_Click" FontSize="14" FontWeight="Bold"></RadioButton>

            <TextBlock Grid.Column="1" Grid.Row="3" Text="Edit Map Events:" Margin="4" FontSize="16" FontWeight="Bold"/>
            <CheckBox Grid.Column="1" Grid.Row="4" FontSize="14" FontWeight="Bold" Foreground="White" 
                      IsChecked="{Binding ShowTrackOverlayLogs, Mode=TwoWay}"
                      Margin="4" Content="TrackOverlay Events"/>
            <CheckBox Grid.Column="1" Grid.Row="5" FontSize="14" FontWeight="Bold" Foreground="White" 
                      IsChecked="{Binding ShowTrackOverlayMouseMoveLogs, Mode=TwoWay}"
                      Margin="20,4,4,4" Content="MouseMove Events"/>
            <CheckBox Grid.Column ="1" Grid.Row="6" FontSize="14" FontWeight="Bold" Foreground="White" 
                      IsChecked="{Binding ShowEditOverlayLogs, Mode=TwoWay}"
                      Margin="4" Content="EditOverlay Events"/>
            <CheckBox Grid.Column="1" Grid.Row="7" FontSize="14" FontWeight="Bold" Foreground="White" 
                      IsChecked="{Binding ShowEditOverlayMouseMoveLogs, Mode=TwoWay}"
                      Margin="20,4,4,4" Content="MouseMove Events"/>
            <ListBox  Grid.Column ="1" Grid.Row="8" Margin="5"  x:Name="LogListBox"
                      ItemsSource="{Binding Path =FilteredLogMessages}"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      VerticalAlignment="Stretch"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" TextWrapping="Wrap" 
                        Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

        </Grid>
        <!-- Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="DimGray"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="Margin" Value="4"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="22"></Setter>
            <Setter Property="Margin" Value="0,10,0,0"></Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="Margin" Value="8,0,0,0"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        </Style>
    </UserControl.Resources>
</UserControl>