<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ZoomToExtents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded" />
        <Grid Grid.Column="1" Grid.Row="0">
            <!-- Zooming Controls -->
            <Label Grid.Column="0" Grid.Row="0" Content="Zooming:" FontSize="16" FontWeight="Bold"/>
            <Grid Grid.Column="0" Grid.Row="1">
                <Button x:Name="ZoomIn" Content="Zoom In" Click="ZoomIn_Click" 
                            Grid.Column="0" Margin="0" Padding="4"/>
                <Button x:Name="ZoomOut" Content="Zoom Out" Click="ZoomOut_Click" 
                            Grid.Column="1" Margin="0" Padding="4"/>
                <Button x:Name="ZoomToScale" Content="Zoom To Scale" Click="ZoomToScale_Click" Grid.Row="2" 
                            Grid.Column="0" Margin="0" Padding="4"/>
                <TextBox x:Name="ZoomScale" Text="10000" Grid.Row="2" Grid.Column="1" Margin="0" Padding="4"/>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
            </Grid>

            <!-- Layer BBox Controls -->
            <Label Grid.Column="0" Grid.Row="2" Content="Layer Bounding Box:" FontSize="16" FontWeight="Bold"/>
            <Grid Grid.Column="0" Grid.Row="3">
                <Button x:Name="LayerBoundingBox" Content="Set Extent to Layer BBox" Click="LayerBoundingBox_Click" />
            </Grid>

            <!-- Center At Controls-->
            <Label Grid.Column="0" Grid.Row="4" Content="Center At:" FontSize="16" FontWeight="Bold"/>
            <Grid Grid.Column="0" Grid.Row="5">
                <Button x:Name="CenterAt" Content="Center At(33.15,-96.82)" Click="CenterAt_Click" />
            </Grid>

            <!-- Rotating Controls -->
            <Label Grid.Column="0" Grid.Row="6" Content="Rotating:" FontSize="16" FontWeight="Bold"/>
            <Grid Grid.Column="0" Grid.Row="7">
                <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding ElementName=RotateAngle, Path=Value, UpdateSourceTrigger=PropertyChanged}" Width="28" DockPanel.Dock="Right"></TextBox>
                <Slider Grid.Column="0" Grid.Row="0" x:Name="RotateAngle" Maximum="360" Value="0" AutoToolTipPlacement="TopLeft" TickFrequency="15" IsSnapToTickEnabled="True" ValueChanged="RotateAngle_OnValueChanged"/>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
            </Grid>

            <!-- Controls Grid Layout -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" MinWidth="256"/>
        </Grid.ColumnDefinitions>
    </Grid>

    <!-- Styles -->
    <UserControl.Resources>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="DimGray"></Setter>
            <Setter Property="Margin" Value="8,8,8,8"></Setter>
        </Style>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Height" Value="12"></Setter>
            <Setter Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="0,0,0,4"></Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"></Setter>
        </Style>
    </UserControl.Resources>
</UserControl>