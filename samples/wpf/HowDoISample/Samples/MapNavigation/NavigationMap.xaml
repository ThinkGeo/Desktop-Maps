<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.NavigationMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="ThisControl">

    <UserControl.Resources>
        <!-- Reusable Style for Image Buttons Without Hover Background -->
        <Style x:Key="ImageButtonNoHoverStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded"/>

        <!-- Compass Button -->
        <Button x:Name="CompassButton"
                    Style="{StaticResource ImageButtonNoHoverStyle}"
                    Width="40" Height="40"
                    Background="Transparent" 
                    BorderThickness="0"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"
                    RenderTransformOrigin="0.5,0.5"
                    Click="CompassButton_Click">
            <Button.RenderTransform>
                <RotateTransform Angle="{Binding ElementName=MapView, Path=RotationAngle}"/>
            </Button.RenderTransform>
            <Image Source="/Resources/icon_north_arrow.png" Stretch="Fill"/>
        </Button>

        <!-- Default Extent Button -->
        <Button x:Name="DefaultExtentButton"
                    Style="{StaticResource ImageButtonNoHoverStyle}"
                    Width="40" Height="40"
                    Background="Transparent" 
                    BorderThickness="0"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,10,0"
                    Click="DefaultExtentButton_Click">
            <Image Source="/Resources/icon_globe_black.png"/>
        </Button>

        <StackPanel  Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <TextBlock   Background="LightGray" IsEnabled="False"
                       VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,5" 
                       Height="20" Width="350" FontSize="16" TextAlignment="Center"
                       Text="{Binding ElementName=ThisControl, Path=TxtCoordinates}"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Background="LightGray" VerticalAlignment="Bottom" 
                           Width="110" Height="20" FontSize="16"
                           Text="{Binding ElementName=MapView, Path=RotationAngle, StringFormat={}Rotation: {0:N0}}"/>
                <TextBlock Background="LightGray" VerticalAlignment="Bottom" 
                           Width="100" Height="20" FontSize="16"
                           Text="{Binding ElementName=MapView, Path=CurrentZoom, StringFormat={}Zoom: {0:N2}}"/>
                <TextBlock Background="LightGray" VerticalAlignment="Bottom" 
                       Width="140" Height="20" FontSize="16"
                       Text="{Binding ElementName=MapView, Path=CurrentScale, StringFormat={}Scale: {0:N0}}"/>
                
            </StackPanel>
        </StackPanel>

        <StackPanel Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Orientation="Horizontal" 
                    Height="20" Width ="120" Background="LightGray">
            <CheckBox x:Name="ThemeCheckBox" VerticalAlignment="Center" Background="LightGray" BorderBrush="Black"
                          Click="ThemeCheckBox_Click"/>
            <TextBlock Text = "Dark Theme" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16" />
        </StackPanel>

    </Grid>
</UserControl>