<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ZoomToBlackHole"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tgWpf="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             xmlns:tgCore="clr-namespace:ThinkGeo.Core;assembly=ThinkGeo.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <tgWpf:MapView x:Name="MapView"
                        Background="Black"
                        MinimumScale="0"
                        CurrentScale ="50000"
                        CenterPoint="POINT (0 0)"
                        DefaultOverlaysRenderSequenceType="Concurrent"
                        Loaded="MapView_Loaded">
            <tgWpf:MapView.Overlays>
                <tgWpf:LayerOverlay TileType="SingleTile">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_0.jpg" 
                                                    CenterPoint="POINT (0 0)" UpperScale="200000"  Scale="50000" LowerScale="6000"/>
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile" Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_1.jpg" 
                                              CenterPoint="POINT (960 3140)" Scale="5000" UpperScale="20000"  LowerScale="3000"/>
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile" Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_2.jpg" 
                                              CenterPoint="POINT (1026 3138)" Scale="5000" UpperScale="7000"  LowerScale="200"/>
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile"  Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_3.jpg" 
                                              CenterPoint="POINT (1008 3140)" Scale="650" UpperScale="1000"   LowerScale="40" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile"  Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_4.jpg" 
                                              CenterPoint="POINT (1019 3159)" Scale="234" UpperScale="400" LowerScale="20" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile" Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_5.jpg" 
                                              CenterPoint="POINT (1005.1 3152.5)" Scale="48" UpperScale="100" LowerScale="3" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile" Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_6.jpg" 
                                              CenterPoint="POINT (1002.3 3151.8)" Scale="20" UpperScale="40"  LowerScale="1" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile" Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_7.jpg" 
                                              CenterPoint="POINT (1001.05 3151.15)" Scale="2.2" UpperScale="8" LowerScale="0.5" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile"  Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_8.jpg" 
                                              CenterPoint="POINT (1000.775 3151.0768)" Scale="1.34" UpperScale="2" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
                <tgWpf:LayerOverlay TileType="SingleTile"  Opacity="0">
                    <tgWpf:LayerOverlay.Layers>
                        <tgCore:GeoImageLayer ImagePathFilename="Data/Jpg/m87_9.jpg" 
                                              CenterPoint="POINT (1000.698 3151.046)" Scale="0.03" UpperScale="0.7" />
                    </tgWpf:LayerOverlay.Layers>
                </tgWpf:LayerOverlay>
            </tgWpf:MapView.Overlays>
        </tgWpf:MapView>

        <Button Background="Transparent"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Width="40" Height="40" Margin="10"
                Click="DefaultExtentButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="OverridesDefaultStyle" Value="True"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
            <Image Source="/Resources/icon_globe_black.png" Stretch="Fill"></Image>
        </Button>

        <Button HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Background="Gray" Height="40" Foreground="Black" 
                Click="ZoomToBlackHoleButton_Click" FontSize="20"
                Content="Zoom To M87 Black Hole"/>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Foreground="White"
                   FontSize="20"
                   Text="{Binding ElementName=MapView, Path=CurrentScale, StringFormat='Scale: {0:N2}'}"/>
    </Grid>
</UserControl>