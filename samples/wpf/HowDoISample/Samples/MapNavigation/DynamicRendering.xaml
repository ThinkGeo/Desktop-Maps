<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.DynamicRendering"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="ThisControl">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded" />

        <TextBlock Text="{Binding ElementName=MySlider, Path=Value, StringFormat='State Population in {0:F0}'}"
                   FontSize="26" HorizontalAlignment="Center" Width="300" Height="40" VerticalAlignment="Top"
                   Margin="0,10,0,0" />

        <Slider x:Name="MySlider" Width="200" VerticalAlignment="Bottom"
                HorizontalAlignment="Center" Orientation="Horizontal" Minimum="1950" Maximum="2024"
                Margin="0,0,0,10" 
                Height="20" ValueChanged="MySlider_OnValueChanged"/>

        <Button Content="Play" Click="PlayAnimation_Click" Margin="260,0,0,10" 
                    Width="30" Height="20" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>

</UserControl>