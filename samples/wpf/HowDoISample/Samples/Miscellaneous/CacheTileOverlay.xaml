<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.CacheTileOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <thinkGeoUi:MapView x:Name="MapView" Grid.Column="0" Loaded="MapView_Loaded" />
        <ProgressBar Grid.Column="0" x:Name="MyProgressBar" Height="25" VerticalAlignment="Bottom"
                     Minimum="0" Maximum="100" Value="0" Visibility="Hidden"
                     Margin="0,0,0,10"/>

        <StackPanel Grid.Column="1" Margin="0">
            <CheckBox Content="Only Get Tiles from Cache" Foreground="White" IsChecked="True" Margin="5"
                      Checked="ckbCacheOnly_OnChecked"
                      Unchecked="ckbCacheOnly_OnChecked"/>
            <Button Content="Generate Cache" Height="40" 
                    Click = "BtnGenerateCache_OnClick" Margin="5"/>

            <Button Content="Clear Cache" Height="40" 
                        Click="BtnClearCache_OnClick" Margin="5"/>

            <Button Content="Open Cache Folder" Height="40" 
                    Click="btnOpenCacheFolder_OnClick"  Margin="5"/>

            <Button Content="Switch to Global Tile Matrix" Height="40" 
                    Click="btnToggleMatrix_OnClick"  Margin="5"/>

        </StackPanel>

    </Grid>
</UserControl>
