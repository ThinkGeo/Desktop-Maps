<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.NavigateOnTouchScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView x:Name="MapView" Loaded="MapView_Loaded"/>

        <CheckBox VerticalAlignment="Bottom"
                  Content="Freehand Drawing"
                  Checked="CheckBox_Toggled"
                  Unchecked="CheckBox_Toggled"/>

        <TextBlock Background="Gray"
                   VerticalAlignment="Bottom" HorizontalAlignment="Center"
                   Width="170" Height="35" FontSize="30"
                   Text="{Binding ElementName=MapView, Path=CurrentZoom, StringFormat={}Zoom: {0:N2}}"/>

        <Button Content="Watch Tutorial on YouTube"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Click="OnOpenWebsiteClick"/>
    </Grid>

</UserControl>