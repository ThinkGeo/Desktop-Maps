<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.MVTWithLocalFonts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf" 
             Background="White"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <thinkGeoUi:MapView x:Name="MapView" Grid.Column="0" Loaded="MapView_Loaded" />
        <TextBlock Grid.Column="0" Background="gray" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                   Width="200" Height="40" FontSize="30"
                   Text="{Binding ElementName=MapView, Path=CurrentZoom, StringFormat={}Zoom: {0:N2}}"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5" Background="LightGray">
            <RadioButton  Margin="0, 5" Checked="SwitchTileSize_OnCheckedChanged" Content="Multi Tile" IsChecked="True"/>
            <RadioButton  Margin="0, 5" Checked="SwitchTileSize_OnCheckedChanged" Content="Single Tile"/>
            <RadioButton Margin="0,5"
                         Checked="SwitchTileSize_OnCheckedChanged">
                <TextBlock Text="Multi Tile + Dynamic Labeling"
                           TextWrapping="Wrap"
                           Width="100"/>
            </RadioButton>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1"  VerticalAlignment="Bottom"
                    Margin="5" Background="LightGray">
            <RadioButton  Margin="0, 5" Checked="CustomFont_OnCheckedChanged" Content="Custom Font" />
            <RadioButton  Margin="0, 5" Checked="FallbackFont_OnCheckedChanged" Content="System Fallback Font" IsChecked="True"/>
        </StackPanel>
    </Grid>
</UserControl>
