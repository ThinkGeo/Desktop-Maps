<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.WMTS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded"></thinkGeoUi:MapView>
        <CheckBox FontSize="14" FontWeight="Bold" Foreground="Gray" 
                  IsChecked="True"
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Center"
                  Checked="DisplayTileIdCheckBox_Checked"
                  Unchecked="DisplayTileIdCheckBox_Checked" 
                  Margin="4" Content="Show Debug Info"/>
    </Grid>
</UserControl>