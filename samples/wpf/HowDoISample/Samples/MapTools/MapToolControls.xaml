<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.MapToolControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded" />

        <Grid Grid.Column="1" Grid.Row="0">
            <Label Grid.Column="1" Grid.Row="0" Content="Map Tool Controls" FontSize="16" FontWeight="Bold" />
            <Separator Grid.Column="1" Grid.Row="1" />

            <ScrollViewer Grid.Column="1" Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,4,0">

                    <CheckBox Content="Display Pan Zoom Bar"
                              IsChecked="{Binding ElementName=MapView, Path=MapTools.PanZoomBar.IsEnabled, Mode=TwoWay}" />

                    <CheckBox Content="Display Logo"
                              IsChecked="{Binding ElementName=MapView, Path=MapTools.Logo.IsEnabled, Mode=TwoWay}" />

                    <CheckBox Content="Display Scale Line"
                              IsChecked="{Binding ElementName=MapView, Path=MapTools.ScaleLine.IsEnabled, Mode=TwoWay}" />

                    <StackPanel>
                        <CheckBox Content="Display Mouse Coordinate"
                                  IsChecked="{Binding ElementName=MapView, Path=MapTools.MouseCoordinate.IsEnabled, Mode=TwoWay}" />
                        <ComboBox x:Name="CoordinateType" SelectionChanged="CoordinateType_SelectionChanged" Margin="20,0,0,0">
                            <ComboBoxItem Content="Lat, Lon" IsSelected="True"/>
                            <ComboBoxItem Content="DMS"/>
                            <ComboBoxItem Content="X:N2, Y:N2" />
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Controls Grid Layout -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        </Grid>

        <!-- Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
    </Grid>

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke" />
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="DimGray" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="22" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="22" />
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="Margin" Value="0,6,0,0" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="WhiteSmoke" />
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Height" Value="8" />
        </Style>
    </UserControl.Resources>
</UserControl>
