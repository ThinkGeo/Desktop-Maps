<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ScaleLineScaleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded"/>

        <Grid Grid.Column="1" Grid.Row="0">
            <Label Grid.Column="1" Grid.Row="0" Content="Location" Margin="0,10,0,0"/>
            <ComboBox Grid.Column="1" Grid.Row="1" x:Name="CboLocations" VerticalAlignment="Top" HorizontalAlignment="Center"
                      Background="Gray" Width="200" Height="30" FontSize="18" SelectedIndex="0"
                      SelectionChanged="CboLocations_OnSelectionChanged"  Margin="0,10,0,0">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Width" Value="190"/>
                        <Setter Property="IsHitTestVisible" Value="True"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>

            <Label Grid.Column="1" Grid.Row="3" Content="Scale Line Unit System" Margin="0,10,0,0"/>
            <ComboBox Grid.Column="1" Grid.Row="4" x:Name="CboUnitSystems" VerticalAlignment="Top" HorizontalAlignment="Center"
                      Background="Gray" Width="200" Height="30" FontSize="18" SelectedIndex="0"
                      SelectionChanged="CboUnitSystems_OnSelectionChanged"  Margin="0,10,0,0">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Width" Value="190"/>
                        <Setter Property="IsHitTestVisible" Value="True"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
            </ComboBox>

            <CheckBox Grid.Column="1" Grid.Row="11" x:Name="ChkCustomTextStyles" Content="Custom text styles for ScaleLine" Margin="10,10"
                      Checked="ChkCustomTextStyles_OnChecked" Unchecked="ChkCustomTextStyles_OnUnchecked"/>

            <!-- Controls Grid Layout -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="DimGray"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="22"></Setter>
            <Setter Property="Margin" Value="0,10,0,0"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="Margin" Value="4"></Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
