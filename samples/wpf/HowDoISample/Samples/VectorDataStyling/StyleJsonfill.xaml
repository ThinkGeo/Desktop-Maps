<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.StyleJsonfill" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf" 
             Background="White" mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <thinkGeoUi:MapView x:Name="MapView" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Loaded="MapView_Loaded" />

        <TextBlock Grid.Column="0" Grid.Row="1" Background="gray" VerticalAlignment="bottom" HorizontalAlignment="Center" Height="30" FontSize="20" 
                   Text="{Binding ElementName=MapView, Path=CurrentZoom, StringFormat={}Zoom: {0:N2}}" />

        <Grid Grid.Row="0" Grid.Column="1" Margin="10" Background="LightGray">
            <TextBox x:Name="JsonContentTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="12" />
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <Button x:Name="AllPropertiesButton" Content="All Properties" Click="AllProperties_Click" Margin="0,0,5,0" Padding="10" />
                <Button x:Name="LoadStyle1Button" Content="Supported" Click="SupportedProperties_Click" Margin="0,0,5,0" Padding="10" />
                <Button x:Name="LoadStyle2Button" Content="Unsupported" Click="UnsupportedProperties_Click" Margin="0" Padding="10" />
            </StackPanel>

            <Button x:Name="ApplyChangesButton" Content="Modification" Click="ApplyChangesButton_Click" Margin="0,0,0,10" Padding="10" HorizontalAlignment="Center" />

            <TextBlock x:Name="StatusTextBlock" Text="show" Foreground="Gray" />
        </StackPanel>

    </Grid>

</UserControl>