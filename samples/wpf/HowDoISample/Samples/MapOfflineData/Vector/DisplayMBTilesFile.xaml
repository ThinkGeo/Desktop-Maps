<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.DisplayMbTilesFile" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <thinkGeoUi:MapView x:Name="MapView" Grid.Column="0" Loaded="MapView_Loaded" />

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
            <RadioButton  Margin="0, 5" Foreground="White"
                          Checked="SwitchTileSize_OnCheckedChanged" Content="No Style"/>
            <RadioButton  Margin="0, 5" IsChecked="True"   Foreground="White"
                          Checked="SwitchTileSize_OnCheckedChanged" Content="Apply Style"/>
        </StackPanel>
    </Grid>
</UserControl>