<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.DisplayMbTilesFile" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf" 
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <thinkGeoUi:MapView x:Name="MapView" Grid.Column="0" Loaded="MapView_Loaded" Grid.RowSpan="2" />

        <!-- Top stack of controls -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0">
            <Label Content="Projection" Margin="5"
                   FontSize="16" FontWeight="Bold" 
                   Foreground="White" />

            <RadioButton Tag="3857" 
                         Checked="Projection_Checked" 
                         IsChecked="True" 
                         Foreground="White"
                         Margin="10,5"
                         Content="EPSG 3857"/>

            <RadioButton Tag="4326" Checked="Projection_Checked"
                         Foreground="White"
                         Margin="10, 5" Content="EPSG 4326"/>
            
            <Label Content="Style" Margin="5"
                   FontSize="16" FontWeight="Bold" 
                   Foreground="White" />

            <StackPanel Margin="5">
                <RadioButton  Margin="0, 5" Foreground="White"
                              Checked="SwitchStyleJson_OnCheckedChanged" Content="Without StyleJson"/>
                <RadioButton  Margin="0, 5" IsChecked="True"   Foreground="White"
                              Checked="SwitchStyleJson_OnCheckedChanged" Content="With StyleJson"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>