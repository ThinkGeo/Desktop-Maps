<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.FindCrossingFeatures"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:thinkGeoUi="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <thinkGeoUi:MapView Grid.Column="0" Grid.Row="0" x:Name="MapView" Loaded="MapView_Loaded"></thinkGeoUi:MapView>
        <Grid Grid.Column="1" Grid.Row="0">
            <Label Grid.Column="1" Grid.Row="0">
                <Label.Content>
                    <AccessText HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" 
                                Text="Perform a 'Crosses' Query"/>
                </Label.Content>
            </Label>
            <TextBlock Grid.Column="1" Grid.Row="1" FontWeight="Bold"
                       TextWrapping="Wrap" Margin="5,0,0,0">
                       Click On The Map To Start Drawing a New Line
            </TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="2" FontWeight="Bold"
                       TextWrapping="Wrap" Margin="5,5,0,0">
                       Double-Click On The Map To Finish Drawing
            </TextBlock>
            <TextBlock Grid.Column="1" Grid.Row="3" x:Name="TxtNumberOfFeaturesFound"
                       TextWrapping="Wrap" Margin="5,0,0,0"></TextBlock>

            <Label Grid.Column="1" Grid.Row="4">
                <Label.Content>
                    <AccessText HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Text="Pan the Map"/>
                </Label.Content>
            </Label>
            <TextBlock Grid.Column="1" Grid.Row="5" x:Name="TxtPanTheMap" TextWrapping="Wrap" Margin="5,-5,0,0">
                        You can press and hold the middle mouse button (scroll wheel) to move the map, even while drawing a line. 
                        This allows you to reposition the view before placing the next point.
            </TextBlock>

            <Label Grid.Column="1" Grid.Row="6">
                <Label.Content>
                    <AccessText HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Text="Zoom In/Out"/>
                </Label.Content>
            </Label>
            <TextBlock Grid.Column="1" Grid.Row="7" x:Name="TxtZoomInOut" TextWrapping="Wrap" Margin="5,-5,0,0">
                       Scroll the mouse wheel forward to zoom in, and backward to zoom out.
            </TextBlock>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="240" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        </Grid>

        <!-- Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
    </Grid>
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="DimGray"></Setter>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
            <Setter Property="Margin" Value="0,10,0,0"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Height" Value="22"></Setter>
            <Setter Property="Margin" Value="0,10,0,0"></Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="WhiteSmoke"></Setter>
        </Style>

    </UserControl.Resources>
</UserControl>