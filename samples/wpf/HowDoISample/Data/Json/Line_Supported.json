{
  "version": 8,
  "name": "LocalShapefileLineSupportedProperties",
  "sources": {
    "local-shp": {
      "type": "custom"
    }
  },
  "layers": [
    {
      "s": null,
      "id": "area-layer",
      "type": "fill",
      "source": "local-shp",
      "source-layer": "Parks.shp",
      "paint": {
        "fill-color": "#ffaaee",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "line-layer",
      "type": "line",
      "source": "local-shp",
      "source-layer": "Streets.shp",
      "paint": {
        "line-color": "#003344",
        "line-width": 2
      }
    },
    {
      "id": "poi-points",
      "type": "symbol",
      "source": "local-shp",
      "source-layer": "hotelsLayer.shp",
      "layout": {
        "text-field": "{name}",
        "text-font": [ "Noto Sans Regular" ],
        "text-size": 12,
        "text-offset": [ 0, 0.6 ],
        "text-anchor": "top"
      },
      "paint": {
        "text-color": "#FF3333",
        "text-halo-color": "#ffffff",
        "text-halo-width": 1
      }
    }
  ]
}
