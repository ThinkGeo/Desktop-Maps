{
  "version": 8,
  "name": "LocalShapefileLineAllProperties",
  "sources": {
    "local-shp": {
      "type": "custom"
    }
  },
  "layers": [
    {
      "id": "area-layer",
      "type": "fill",
      "source": "local-shp",
      "source-layer": "Parks.shp",
      "paint": {
        "fill-color": "#ffaaee",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "line-layer",
      "type": "line",
      "source": "local-shp",
      "source-layer": "Streets.shp",
      "minzoom": 0,
      "maxzoom": 24,
      "layout": {
        "visibility": "visible",
        "line-sort-key": 50,
        "line-cap": "round",
        "line-join": "round",
        "line-miter-limit": 10,
        "line-offset": 0,
        "line-round-limit": 2,
        "line-translate": [ 5, 10 ],
        "line-translate-anchor": "map",
        "line-z-offset": 10,
        "line-cross-slope": 0
      },
      "paint": {
        "line-color": "#003344",
        "line-width": 2,
        "line-opacity": 0.8,
        "line-blur": 1,
        "line-dasharray": [ 4, 2 ],
        "line-gap-width": 0,
        "line-pattern": "dashed-line",
        "line-lighting-effect": "highlight"
      }
    }
  ]
}
