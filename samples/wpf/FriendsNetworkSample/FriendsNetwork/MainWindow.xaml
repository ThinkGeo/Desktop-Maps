<Window x:Class="FriendsNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FriendsNetwork"
        xmlns:WpfDesktopEdition="clr-namespace:ThinkGeo.MapSuite.Wpf;assembly=ThinkGeo.MapSuite.Wpf" 
        mc:Ignorable="d"
         Title="ThinkGeo Friends' Network Sample " Height="800" Width="1000" Loaded="Window_Loaded"  Icon="MS.ico">
    <Grid>
        <WpfDesktopEdition:WpfMap Name="wpfMap1" />
        <Border BorderThickness="1" BorderBrush="#cccccc" Width="205" Height="166" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,0,0">
            <StackPanel Orientation="Vertical" Background="White">
                <TextBlock TextWrapping="Wrap" Margin="5,10,5,10"><Run Text="This sample show how to plot friends' network on facebook with a map using their geo locations, putting the user at hisr location, plots all other friends around it, joins them using a line. The distance of the line is the distance between current maker and the friend's marker."/></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
