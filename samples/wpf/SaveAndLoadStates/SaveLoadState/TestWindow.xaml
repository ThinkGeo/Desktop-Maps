<Window x:Class="SaveLoadState.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:my="clr-namespace:ThinkGeo.MapSuite.Wpf;assembly=ThinkGeo.MapSuite.Wpf"
    Title="Code Community-Save/Load State" Height="640" Width="800"
        Loaded="Window_Loaded" >
    <Grid Height="568">
        <my:WpfMap Name="wpfMap1" Width="778" Height="568" MouseMove="wpfMap1_MouseMove" />
        <TextBox Grid.Row="1" Height="31.108" Margin="0,0,0,-19.998" Name="textBox1" VerticalAlignment="Bottom" Grid.ColumnSpan="5" HorizontalAlignment="Left" Width="249.975" />
        <GroupBox Height="56" HorizontalAlignment="Left" Margin="24.975,0,0,30" Name="groupBox1" VerticalAlignment="Bottom" Width="248" Grid.IsSharedSizeScope="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="127*" />
                    <ColumnDefinition Width="57*" />
                    <ColumnDefinition Width="52*" />
                </Grid.ColumnDefinitions>
                <Button Margin="16,10,32,0" Name="btnLoad" Click="btnLoad_Click">Load State</Button>
                <Button Margin="13,10,17,0" Name="btnSave" Grid.ColumnSpan="2" Grid.Column="1" Click="btnSave_Click">Save State</Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
