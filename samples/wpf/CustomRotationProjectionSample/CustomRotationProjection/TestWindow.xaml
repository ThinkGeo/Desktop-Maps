<Window x:Class="CustomRotationProjection.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:my="clr-namespace:ThinkGeo.MapSuite.Wpf;assembly=ThinkGeo.MapSuite.Wpf"
    Title="Code Community-Custom Rotation Projection" Height="640" Width="800"
        Loaded="Window_Loaded" >
    <Grid>
        <my:WpfMap Name="wpfMap1" MouseMove="wpfMap1_MouseMove" />
        <TextBox Grid.Row="1" Name="textBox1" VerticalAlignment="Bottom" Grid.ColumnSpan="5" HorizontalAlignment="Left" Width="249.975" />
        <Button Margin="340,0,0,0" Name="btnRotateClockWise" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="btnRotateClockWise_Click">Rotate ClockWise</Button>
        <Button HorizontalAlignment="Right" Margin="0,0,96,0" Name="btnRotateCounterClockWise" VerticalAlignment="Bottom" Click="btnRotateCounterClockWise_Click">Rotate Counter ClockWise</Button>
    </Grid>
</Window>
