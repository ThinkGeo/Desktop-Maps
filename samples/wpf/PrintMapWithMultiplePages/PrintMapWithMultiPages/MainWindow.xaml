<Window x:Class="PrintMapWithMultiPages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc1="clr-namespace:ThinkGeo.MapSuite.Wpf;assembly=ThinkGeo.MapSuite.Wpf"
        xmlns:local="clr-namespace:PrintMapWithMultiPages"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" Loaded="Window_Loaded">
    <Grid>
        <uc1:WpfMap Name="mapView"></uc1:WpfMap>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="11" Background="#fafafa" >
            <StackPanel Margin="12">
                <GroupBox Header="Pages:">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="mapPage" Checked="SelectPage" IsChecked="True">Page1</RadioButton>
                        <RadioButton x:Name="legendPage" Checked="SelectPage">Page2</RadioButton>
                    </StackPanel>
                </GroupBox>
                <Button Content="Print" Click="PrintClick"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
