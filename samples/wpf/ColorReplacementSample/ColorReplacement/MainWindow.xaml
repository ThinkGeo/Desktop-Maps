<Window x:Class="ColorReplacement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorReplacement"
           xmlns:ms="clr-namespace:ThinkGeo.MapSuite.Wpf;assembly=ThinkGeo.MapSuite.Wpf"
        mc:Ignorable="d"
        Title="Color Replacement" Height="800" Width="1000" Loaded="Window_Loaded" Icon="MS.ico">
    <Grid>
        <ms:WpfMap Name="wpfMap1"  />
        <Border BorderThickness="1" BorderBrush="#cccccc" Width="200" Height="100" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
            <StackPanel Orientation="Vertical" Background="White">
                <TextBlock TextWrapping="Wrap" Margin="5,10,5,10">
                Click the button below to re-color the lake and field in overlapped image
                </TextBlock>
                <Button Name="btnReplace"  Click="btnReplace_Click" Content="Replace Color" Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
