<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ScaleUpAndDownAFeature"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <Button Margin="0,0,0,5" x:Name="btnScaleUp" Click="btnScaleUp_Click">ScaleUp</Button>
            <Button Margin="0,0,0,5" x:Name="btnScaleDown" Click="btnScaleDown_Click">ScaleDown</Button>
        </StackPanel>
    </Grid>
</UserControl>
