<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.FindTheDistanceBetweenTwoFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <StackPanel Orientation="Horizontal">
                <TextBox Width="100" Margin="0 0 5 0" x:Name="txtDistance" IsReadOnly="True"></TextBox>
                <Button Width="75" x:Name="btnGetDistance" Click="btnGetDistance_Click">Get</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
