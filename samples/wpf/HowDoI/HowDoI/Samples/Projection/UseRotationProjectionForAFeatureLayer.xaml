<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.UseRotationProjectionForAFeatureLayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf"
    xmlns:uc2="clr-namespace:ThinkGeo.UI.Wpf.HowDoI">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <Button Margin="0 0 0 5" Name="btnRotateCounterclockwise" Click="btnRotateCounterclockwise_Click">Counterclockwise</Button>
            <Button  Margin="0 0 0 5" Name="btnRotateClockwise" Click="btnRotateClockwise_Click">Clockwise</Button>
        </StackPanel>
    </Grid>
</UserControl>
