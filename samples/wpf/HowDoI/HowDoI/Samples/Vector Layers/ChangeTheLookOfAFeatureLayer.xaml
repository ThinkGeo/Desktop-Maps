<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ChangeTheLookOfAFeatureLayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95" Orientation="Horizontal">
            <Button Width="80" Margin="4" x:Name="btnStyle1" Click="btnStyle1_Click">Style1</Button>
            <Button Width="80" Margin="4" x:Name="btnStyle2" Click="btnStyle2_Click">Style2</Button>
        </StackPanel>
    </Grid>
</UserControl>
