<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.FindFeaturesWithinDistance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <ComboBox x:Name="cmbDistance" SelectionChanged="cmbDistance_SelectedIndexChanged">
                <ComboBoxItem>500</ComboBoxItem>
                <ComboBoxItem IsSelected="True">1,000</ComboBoxItem>
                <ComboBoxItem>2,000</ComboBoxItem>
                <ComboBoxItem>5,000</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>
