<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ZoomToAFeatureOrFeatures"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <Button  Margin="0,5,0,0" x:Name="btnMultipleFeatures"  Click="btnMultipleFeatures_Click">Zoom To Multiple Features</Button>
            <Button Margin="0,5,0,0" x:Name="btnOneFeature"  Click="btnOneFeature_Click">Zoom To One Feature</Button>
        </StackPanel>
    </Grid>
</UserControl>
