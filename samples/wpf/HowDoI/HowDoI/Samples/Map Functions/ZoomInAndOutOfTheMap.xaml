<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.ZoomInAndOutOfTheMap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc1="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <uc1:MapView x:Name="mapView" Loaded="MapView_Loaded"></uc1:MapView>
        <StackPanel Width="200" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8" Opacity="0.95">
            <StackPanel Orientation="Horizontal">
                <Button Tag="Zoom In" Click="Button_Click" Margin="2" >
                    <Image Source="/Resources/ZoomIn.png" Stretch="None"></Image>
                </Button>
                <Button Tag="Zoom Out" Click="Button_Click" Margin="2">
                    <Image Source="/Resources/ZoomOut.png" Stretch="None"></Image>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
