<UserControl x:Class="ThinkGeo.UI.Wpf.HowDoI.DisplayThinkGeoCloudRasterMaps"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ThikGeoWpf="clr-namespace:ThinkGeo.UI.Wpf;assembly=ThinkGeo.UI.Wpf">
    <Grid>
        <ThikGeoWpf:MapView x:Name="Map" Loaded="Map_Loaded"></ThikGeoWpf:MapView>
        <StackPanel Width="180"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Opacity="0.95">
            <RadioButton Content="Light" Margin="5 5 5 0" IsChecked="True" Checked="RadioButton_Checked"/>
            <RadioButton Content="Dark" Margin="5 0" Checked="RadioButton_Checked"/>
            <RadioButton Content="Aerial" Margin="5 0"  Checked="RadioButton_Checked"/>
            <RadioButton Content="Hybrid" Margin="5 0"  Checked="RadioButton_Checked"/>
            <RadioButton Content="TransparentBackground" Margin="5 0 5 5"  Checked="RadioButton_Checked"/>
        </StackPanel>
    </Grid>
</UserControl>
