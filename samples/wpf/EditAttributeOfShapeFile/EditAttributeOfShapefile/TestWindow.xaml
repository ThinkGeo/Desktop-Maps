<Window x:Class="EditAttributeOfShapefile.TestWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:my="clr-namespace:ThinkGeo.MapSuite.Wpf;assembly=ThinkGeo.MapSuite.Wpf"
    Title="Code Community-Edit Attribute of Shapefile" Height="640" Width="800"
        Loaded="Window_Loaded" >
    <Grid >
        <my:WpfMap Name="wpfMap1" MouseMove="wpfMap1_MouseMove" MapClick="wpfMap1_MapClick" />
        <TextBox Grid.Row="1" Name="textBox1" VerticalAlignment="Bottom" Grid.ColumnSpan="5" HorizontalAlignment="Left" />
        <TextBlock  Margin="200,0,0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <Run Background="White" BaselineAlignment="Center">Population:</Run>
            <TextBox Name="textBoxPopulation" KeyDown="textBoxPopulation_KeyDown" />
        </TextBlock>
        <Label Height="80" HorizontalAlignment="Right" Margin="0,12,12,0" Name="label1" VerticalAlignment="Top" Width="167" Background="LightYellow">
            <TextBlock TextWrapping="Wrap">
                Click on a country and change its population in the textbox. Press enter to commit the transaction.
            </TextBlock>
        </Label>
    </Grid>
</Window>
